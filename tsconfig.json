{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "jsx": "preserve",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "checkJs": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
